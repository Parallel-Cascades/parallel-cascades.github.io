---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Content from '~/components/widgets/Content.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import { YouTube } from 'astro-embed';

const metadata = {
  title: 'Parallel Cascades',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Asset Store',
        href: 'https://assetstore.unity.com/publishers/103935',
        target: '_blank',
        icon: 'tabler:brand-unity',
      },
      { text: 'Get in touch', href: '#form' },
    ]}
  >
    <Fragment slot="title">
      Unity Games, Assets & Tools
    </Fragment>

    <Fragment slot="subtitle">
      <span class="text-blue-600 font-semibold">Parallel Cascades</span> create
       high-quality video game content - assets for procedural generation, dynamic 3D shaders, and game systems.
       We are committed to providing long-term support and regular updates to improve and expand our products.
       <br />
    </Fragment>
    <Fragment slot="image">
      <h3 class="text-lg font-semibold mb-2 text-center w-full">Latest Release:</h3>
      <YouTube id="jGfVV7PNJH0" title="Procedural Planet Generation" posterQuality="max" />
      <style is:inline>
        lite-youtube {
          margin: 0 auto;
          max-width: 70%;
        }
      </style>
    </Fragment>
  </Hero>

  <!-- Start of Unity Assets Content Widgets **************** -->

  <Content
    id="unity-assets"
    title="Unity Assets"
    subtitle="Published on the Unity Asset Store, with glowing reviews and ongoing support."
    isReversed
    imageWidth={1280}
    imageHeight={720}
    imageAspectRatio="16:9"
    items={[
      {
        title: 'Procedural Planet Generation is a Unity framework for creating procedural celestial bodies through shaders with editor tools for texture baking and scripts for in-editor and runtime procedural generation.',
      },
      {
        title: 'Features advanced shaders and effects for moons, earth-like planets, gas giants, asteroid rings, and stars.',
      },
      {
        title: 'Perfect for space strategy games, solar system maps, background environments, and skyboxes.',
      }
    ]}
    image={{
      src: '~/assets/images/unity-assets/procedural-planet-generation.png',
      alt: 'Procedural Planet Generation Image',
    }}
    callToAction={{
      target: '_blank',
      text: 'Visit Store Page',
      icon: 'tabler:chevron-right',
      href: 'https://assetstore.unity.com/packages/vfx/shaders/procedural-planet-generation-339842',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Procedural Planet Generation
      </h3>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <Content
    isAfterContent={true}
    imageWidth={1280}
    imageHeight={720}
    imageAspectRatio="16:9"
    defaultIcon="tabler:galaxy"
    items={[
      {
        title: 'Dynamically create unique procedural space skyboxes inside the Unity Editor - with stars, nebulas, galactic glow.',
      },
      {
        title: 'Included are shader effects and materials, editor tools and VFX Graph systems and particles for creating different styles of space skyboxes.',
      },
      {
        title: 'Skyboxes can be rendered fully dynamically at runtime or statically captured to cubemap textures for maximum performance.',
      }
    ]}
    image={{
      src: '~/assets/images/unity-assets/skybox.png',
      alt: 'Procedural Skybox Image',
    }}
    callToAction={{
      target: '_blank',
      text: 'Visit Store Page',
      icon: 'tabler:chevron-right',
      href: 'https://assetstore.unity.com/packages/vfx/shaders/procedural-space-skybox-295596',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Procedural Space Skybox
      </h3>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

    <!-- Content Widget **************** -->

  <Content
    isAfterContent={true}
    isReversed
    defaultIcon="tabler:galaxy"
    imageWidth={1280}
    imageHeight={720}
    imageAspectRatio="16:9"
    defaultIcon="tabler:universe"
    items={[
      {
        title: 'Free sample project with an orbital simulation with primary bodies and satellites - stars, gas giants, planets, moons, and asteroids, all affecting each other gravitationally and dynamically.'
      },
      {
        title: 'Using Unity\'s Data-Oriented Technology Stack (DOTS), this asset demonstrates high-performance gravitational physics through a clean, extensible ECS architecture.',
      },
      {
        title: 'VFX Graph integration syncs with the ECS world to render beautiful orbital trails that visualize the complex movement of N-Body celestial bodies through space in real-time.',
      },

    ]}
    image={{
      src: '~/assets/images/unity-assets/nbody-sim.png',
      alt: 'ECS N-Body Orbit Simulation Image',
    }}
    callToAction={{
      target: '_blank',
      text: 'Visit Store Page',
      icon: 'tabler:chevron-right',
      href: 'https://assetstore.unity.com/packages/templates/systems/ecs-n-body-orbit-simulation-341370',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        ECS N-Body Orbit Simulation
      </h3>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

<!-- ContactUs Widget **************** -->

<ContactUs
    id="form"
    title="Contact Form:"
    subtitle="Get in touch if you need help, support, or want to learn more about our products."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Name',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
    ]}
    textarea={{
      label: 'Message',
    }}
    description="Expect a response within 24 business hours."
  />

</Layout>
